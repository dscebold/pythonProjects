import math

def perimeter(shape):
    if(shape == 1):
        while(True):
            try:
                radius = float(input('Circle Radius: '))
            except:
                print("Enter a number")
            else:
                break
        print(f"{(radius * 2 * math.pi):.2f}")
    if(shape == 2):
        while(True):
            try:
                side1 = float(input('Rectangle Side 1: '))
            except:
                print("Enter a number")
            else:
                break
        while(True):
            try:
                side2 = float(input('Rectangle Side 2: '))
            except:
                print("Enter a number")
            else:
                break
        print(f"{((side1 * 2) + (side2 * 2)):.2f}")
    if(shape == 3):
        while(True):
            try:
                side = float(input('Square Side: '))
            except:
                print("Enter a number")
            else:
                break
        print(f"{side * 4:.2f}")
    if(shape == 4):
        while(True):
            try:
                side1 = float(input('Triangle Side 1: '))
            except:
                print("Enter a number")
            else:
                break
        while(True):
            try:
                side2 = float(input('Triangle Side 2: '))
            except:
                print("Enter a number")
            else:
                break
        while(True):
            try:
                side3 = float(input('Triangle Side 3: '))
            except:
                print("Enter a number")
            else:
                break
        print(f"{side1 + side2 + side3:.2f}")
    